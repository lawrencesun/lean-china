<div class="container">
	<div class="row">
		<div class="span9">
			<div class="well">
				<div class="offset3">
					<%= form_tag '/signin', method: 'post' do %>
					  <%= label_tag :username, "用户名" %>
					  <%= text_field_tag :username %>
					  <br/>
					  <%= label_tag :password, "密码" %>
					  <%= password_field_tag :password %>
					  <br/>
					  <%= submit_tag "登录", class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>

		<div class="span3">
			<div class="well">
				<h7>没有账号？</h7><br/>
				<%= link_to "注册", '/signup', class: "btn btn-success" %>
			</div>
		</div>
	</div>
</div>