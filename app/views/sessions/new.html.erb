<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="well">
					<%= form_tag '/signin', method: 'post' do %>
					<div class="form-group">
					  <%= label_tag :username, t('username') %><br>
					  <%= text_field_tag :username, nil, class: "form-control" %>
					</div>
					<div class="form-group">
					  <%= label_tag :password, t('password') %><br>
					  <%= password_field_tag :password, nil, class: "form-control" %>
					</div>
					<div class="checkbox">
						<label>
					   <%= check_box_tag :remember_me, 1, params[:remember_me] %>
					   <%= t('remember me') %>
					  </label><br>
					</div>
					  <%= submit_tag t('sign_in'), class: "btn btn-primary" %>
					<% end %>
			</div>
		</div>

		<div class="col-md-3">
			<div class="well">
				<h7><%= t('.no_account') %>? </h7><br/>
				<%= link_to t('sign_up'), '/signup', class: "btn btn-success" %>
			</div>
		</div>
	</div>
</div>