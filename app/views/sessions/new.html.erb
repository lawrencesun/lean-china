<div class="container">
	<div class="row">
		<div class="span9">
			<div class="well">
				<div class="offset3">
					<%= form_tag '/signin', method: 'post' do %>
					  <%= label_tag :username, t('username') %>
					  <%= text_field_tag :username %>
					  <br/>
					  <%= label_tag :password, t('password') %>
					  <%= password_field_tag :password %>
					  <br/>
					  <%= submit_tag t('sign_in'), class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>

		<div class="span3">
			<div class="well">
				<h7><%= t('.no_account') %>? </h7><br/>
				<%= link_to t('sign_up'), '/signup', class: "btn btn-success" %>
			</div>
		</div>
	</div>
</div>