<%= render 'shared/error', object: @category %>
<div class="well">
	<div class="offset3">
	<%= form_for @category do |f| %>
		<div class="control-group">
			<%= f.label t('new_category') %>
			<%= f.text_field :name %>
		</div>
		<div class="control-group">
			<%= f.submit t('create'), class: "btn btn-primary" %>
		</div>
	<% end %>
	</div>
</div>