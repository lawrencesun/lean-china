<div class="container">
	<div class="row">
		<div class="col-md-9">
			<%= form_for [@post, @comment] do |f| %>
				<%= render 'shared/error', object: @comment %>
				<div class="form-group">
					<%= f.text_area :body, rows: 10, class: "form-control" %>
				</div>
					<%= f.submit t('update'), class: "btn btn-success"%>
			<% end %>
		</div>
		<div class="col-md-3">
			<%= render 'shared/mdhelp' %>
		</div>
	</div>
</div>
