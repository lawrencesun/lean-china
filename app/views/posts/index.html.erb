<h3>All Posts</h3>
<div class="container">
	<div class="row">
		<div class="span9">
			<div class="well">
				<% @post.each do |post| %>
					<p>
						<%= link_to "#{post.title}", post_path(post) %><br>
						<hr>
					</p>
				<% end %>
			</div>
		</div>

		<div class="span3">
			<%= render 'layouts/sidebar' %>
			<div class="well well-small">
				<small><strong>本站统计</strong><br>
				<ul>
					<li>用户：<%= User.count %></li>
					<li>文章：<%= Post.count %></li>
					<li>评论：<%= Comment.count %></li>
				</ul>
				</small>
			</div>
		</div>


	</div>
</div>






