<h3>All Posts</h3><hr>
<div class="container">
	<div class="row">
		<div class="span9">
			<div class="well">
				<div id="posts">
					<%= render 'shared/posts', object: @posts %>
				</div>
				<div id="paginator">
					<%= paginate @posts, remote: true %>
				</div>
			</div>
		</div>

		<div class="span3">
			<%= render 'layouts/sidebar' %>
			<div class="well well-small">
				<small><strong><%= t('.statistics') %></strong><br>
				<ul>
					<li><%= t('.users') %>：<%= User.count %></li>
					<li><%= t('.posts') %>：<%= Post.count %></li>
					<li><%= t('.comments') %>：<%= Comment.count %></li>
				</ul>
				</small>
			</div>
		</div>


	</div>
</div>






