
<div class="container">
	<div class="row">
		<div class="span9">
			<div class="well">
				<span class="gravatar-normal pull-right"><%= link_to (gravatar_for @post.user), user_path(@post.user) %></span>
				<h3><%= @post.title %></h3>
				<% @post.categories.each do |category| %>
      			<%= link_to category.name, category_path(category), class: "label" %>
      			<% end %>
							<small>posted by <% unless @post.user.blank? %>
								<%= link_to @post.user.username, user_path(@post.user) %>
								<% end %>
								on <%= display_date(@post.created_at) %> 
							</small>
				<hr>
				<p><%= markdown(@post.text) %></p>

				<span class="pull-right">
					<%= link_to like_post_path(@post, like: true), method: 'post', remote: true do %>
						<i class="icon-thumbs-up"></i>
						<span id="post_<%= @post.id %>_likes"><%= @post.likes.size %>人点赞</span>
					<% end %>
				</span>

			</div>

			<div class="well well-small">
				<div>
					<%= render 'shared/comments', object: @post %>
				</div>
				<%= form_for [@post, @comment] do |f| %>
					<%= render 'shared/error', object: @comment %>
					<div class="control-group">
						<%= f.text_area :body, rows: 5, class: "input-block-level" %>
					</div>
					<%= f.submit '发表评论', class: "btn btn-primary"%>
				<% end %>
			</div>
		</div>

  	<div class="span3">
  		<% if correct_user?(@post.user) %>
	  		<div class="well well-small">
	 				<%= link_to '编辑', edit_post_path(@post), class: "btn btn-info" %> |
					<%= link_to '删除', post_path(@post), method: :delete, data: { confirm: '确定删除？'}, class: "btn btn-danger" %> 
				</div>
			<% end %>
  		<%= render 'layouts/sidebar'%>
  	</div>
	</div>
</div>




			


