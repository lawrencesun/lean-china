
<div class="container">
	<div class="row">
		<div class="span9">
			<div class="well">
				<h3><%= @post.title %></h3><hr>
				<p><%= @post.text %></p>
			</div>

			<div class="well">
				<% if @post.comments.any? %>
					<% @post.comments.each do |c| %>
						<p><%= c.body %></p>
					<% end %>
				<% end %>
				<hr>
				<%= form_for [@post, @comment] do |f| %>
					<%= render 'shared/error', object: @comment %>
					<div class="control-group">
						<%= f.text_area :body, rows: 5, class: "input-block-level" %>
					</div>
					<%= f.submit '发表评论', class: "btn btn-primary"%>
				<% end %>
			</div>
		</div>

  	<div class="span3">
  		<%= render 'layouts/sidebar'%>
  	</div>
	</div>
</div>




			<%= link_to '编辑', edit_post_path(@post) %> |
			<%= link_to '删除', post_path(@post), method: :delete, data: { confirm: '确定删除？'} %> |
			<%= link_to '返回', posts_path %>


