<div class="well">
	<%= form_for @post do |f| %>
		<%= render 'shared/error', object: @post %>
		
		<div class="control-group">
		<%= f.label :title %>
		<%= f.text_field :title %>
		</div>

		<div class="control-group">
		<%= f.label :text %>
		<%= f.text_area :text %>
		</div>

		<%= f.submit(@post.new_record? ? "发布" : "更新", class: "btn btn-primary") %>
	<% end %>
</div>