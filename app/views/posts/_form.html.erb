<div class="well">
	<%= form_for @post do |f| %>
		<%= render 'shared/error', object: @post %>
		
		<div class="form-group">
			<%= f.label t('.title') %>
			<%= f.text_field :title, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label t('.content') %>
			<%= f.text_area :text, rows: 10, class: "form-control" %>
		</div>

		<div class='form-group'>
      <%= f.label t('.select_category') %><br>
     	<%= f.select :category_ids, Category.all.collect{|c| [c.name, c.id]}, {}, {multiple: false} %>
    </div>

		<%= f.submit(@post.new_record? ? t('new_post') : t('update'), class: "btn btn-primary") %>
	<% end %>
</div>