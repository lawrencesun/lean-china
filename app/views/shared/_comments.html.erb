<% if object.comments.any? %>
	<% object.comments.each do |comment| %>
		<% unless comment.body.blank? %>
		<table class="comments">

			<tr class="comments">
				<td class="avatar">
					<span class="gravatar-sm pull-left"><%= link_to (gravatar_for comment.user), user_path(comment.user) %></span>
				</td>

				<td class="content">
					<header>
						<div class="pull-right">
							<%= link_to like_post_comment_path(comment.post, comment, like: true), method: 'post', remote: true do %>
								<i class="icon-thumbs-up"></i>
							<% end %>
							<span id="comment_<%= comment.id %>_likes"><%= comment.likes.size %></span>

							<% if correct_user?(comment.user) %>
								<span>	
									<%= link_to edit_post_comment_path(comment.post.id, comment.id) do %>
									<i class="icon-edit"></i>
									<% end %>
								</span>
							<% end %>
									
							<% if admin? %>
								<span>	
									<%= link_to 'delete', post_comment_path(comment.post.id, comment.id), method: 'delete', data: { confirm: '确定删除?'} %>
								</span>
							<% end %>

						</div>
					
						<div class="pull-left">
							<small>
								<%= link_to comment.user.username, user_path(comment.user) %>
								<span class="timestamp">
									<%= time_ago_in_words(comment.created_at) %> ago
								</span>
							</small>
						</div>
						<br/>
					</header>
						
					<p><%= markdown(comment.body) %></p>
				</td>				

	

			</tr>

		</table>
		<% end %>
	<% end %>
<% end %>