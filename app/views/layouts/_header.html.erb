<header class="navbar navbar-fixed-top navbar-inverse" >
	<div class="navbar-inner">
		<div class="container">
			<%= link_to t('lean-china'), root_path, id: "logo" %>
				<nav>
					<ul class="nav nav-pills">
						<li><%= link_to t('.home'),    root_path %></li>
						<li class = "dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t('.categories') %> <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<% @categories.each do |cat| %>
										<li><%= link_to cat.name, category_path(cat) %></li>					
									<% end %>									
									<li class="divider"></li>
									<li><%= link_to t('.new_category'), new_category_path %></li>
								</ul>
						</li>
						<li><%= link_to 'wiki', wiki_path %></li>
						<li><%= link_to t('.tools'), tools_path %></li>

					</ul>
					<% if signed_in? %>
						<ul class="nav pull-right">
							<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= current_user.username %> <b class="caret"></b></a>
								<ul class="dropdown-menu">
								  <li><%= link_to t('.my_profile'), user_path(current_user) %></li>
								  <li><%= link_to t('.setting'), edit_user_path(current_user) %></li>
								  <li class="divider"></li>
								  <li><%= link_to t('sign_out'), signout_path %></li>
								</ul>
							</li>
						</ul>

					<% else %>
						<ul class="nav pull-right hidden-phone">
							<li><%= link_to t('sign_up'), signup_path %></li>
	        		<li><%= link_to t('sign_in'), signin_path %></li>
	      		</ul>
      		<% end %>
				</nav>
		</div>
	</div>
</header>